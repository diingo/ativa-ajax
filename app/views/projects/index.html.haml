= render 'form'

.row
  %h1.large-12.columns
    Active Projects

.row
  .large-9.large-centered.columns
    %table
      %thead
        %tr
          %th Name
          %th Subscribed
          %th Last updated
          %th
          %th
      %tbody.projects
        - @projects.each do |project|
          = render 'project', project: project
.row
  .large-12.columns.large-centered
    = link_to 'New Project', new_project_path, class: ['button', 'small']
